

<RelativeLayout
    android:id="@+id/rbg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/sc_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:textColor="@color/brown" />

    <FrameLayout
        android:layout_width="278dp"
        android:layout_height="406dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:background="@drawable/new_bless_bg">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="381dp">

            <ImageView
                android:id="@+id/screen_print_img"
                android:layout_width="220dp"
                android:layout_height="220dp"

                android:layout_above="@+id/bless_tx"
                android:layout_centerHorizontal="true" />


            <EditText
                android:id="@+id/screen_print_input"
                android:layout_width="200dp"
                android:layout_height="97dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:background="@layout/edit_text_bg_2"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:textSize="10dp" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/screen_print_input"
                android:layout_alignRight="@+id/screen_print_input"
                android:layout_alignTop="@+id/screen_print_input" />

            <TextView
                android:id="@+id/bless_tx"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="124dp"
                android:gravity="center"
                android:text="給予 的祝福"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </RelativeLayout>
    </FrameLayout>


    <Button
        android:id="@+id/screen_print_next"
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/next" />

    <TextView
        android:id="@+id/fb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_marginBottom="109dp"
        android:layout_marginEnd="84dp"
        android:gravity="right"
        android:text="送上祝福"
        android:textColor="@color/white"
        android:textSize="8dp" />

    <EditText
        android:id="@+id/bless_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sc_tx"
        android:layout_alignTop="@+id/fb_name"
        android:background="@color/white"
        android:hint="哪位祝福者"
        android:maxLength="5"
        android:textSize="8dp" />
</RelativeLayout>
