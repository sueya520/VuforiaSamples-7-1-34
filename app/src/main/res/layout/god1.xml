<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_index">


    <TextView
        android:id="@+id/bless_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:text="歡迎回來" />

    <TextView
        android:id="@+id/bless_type_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:text="請前往二樓福德宮" />

    <Button
        android:id="@+id/god1"
        android:layout_width="45dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_weight="1"
        android:background="@drawable/g1"/>

    <ImageView
        android:layout_width="234dp"
        android:layout_height="180dp"
        android:layout_alignEnd="@+id/bless_type_text"
        android:layout_alignRight="@+id/bless_type_text"
        android:layout_alignTop="@+id/god1"
        android:layout_marginEnd="-123dp"
        android:layout_marginRight="-123dp"
        android:background="@drawable/h1" />


</RelativeLayout>
